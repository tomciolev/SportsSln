@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index"
        asp-controller="Home" asp-route-department="">
        Home
    </a>
    @foreach (string department in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(department == ViewBag.SelectedDepartment
            ? "btn-primary" : "btn btn-outline-secondary")"
       asp-action="Index" asp-controller="Home"
       asp-route-department="@department"
       asp-route-productPage="1">
            @department
        </a>
    }
</div>